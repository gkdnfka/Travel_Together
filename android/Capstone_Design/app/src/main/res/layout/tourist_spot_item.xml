<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:gravity="center"
    >


    <ImageView
        android:id="@+id/PlaceImage"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:foreground="@drawable/first"></ImageView>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/PlaceNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="장소 이름"
            android:textColor="#070505" ></TextView>

        <TextView
            android:id="@+id/PlaceAddrText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주소지"
            android:textColor="#000000"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FBF9F9">

        <ImageView
            android:id="@+id/search_tourist_spot_item_favorite"
            android:layout_width="46dp"
            android:layout_height="25dp"
            android:src="@drawable/bookmark"
            android:text="Button"></ImageView>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>
