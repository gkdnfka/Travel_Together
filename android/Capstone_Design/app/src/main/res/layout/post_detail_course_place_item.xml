<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/main_theme"
                    >
                    <TextView
                        android:id="@+id/post_detail_course_place_number"
                        android:layout_width="29dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="1"
                        android:textSize="25dp"
                        android:textColor="#000000" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id = "@+id/post_detail_course_place_item_Linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@drawable/first"
                >

                <TextView
                    android:id="@+id/post_detail_course_place_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_marginLeft="19dp"
                    android:text="TextView"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:textColor="@color/white" />



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/post_detail_course_place_item_more_info"
                        android:layout_width="20dp"
                        android:layout_height="0dp"
                        android:src="@drawable/info"
                        android:layout_weight="1"
                        android:tint="@color/white">
                    </ImageView>

                    <ImageView
                        android:id="@+id/post_detail_course_place_item_bookmark"
                        android:layout_width="20dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/bookmark"
                        >
                    </ImageView>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>