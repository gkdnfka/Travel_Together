<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="184dp"
                android:layout_height="26dp"
                android:gravity="left">

                <ImageView
                    android:id="@+id/place_detail_back_button"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/left_arrow"></ImageView>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                >
                <ImageView
                    android:id="@+id/place_detail_fragment_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/first">
                </ImageView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginTop="11dp"
                android:id="@+id/place_detail_fragment_place_name"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="여행지 이름"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                >
            </TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:background="@color/main_theme"
                android:gravity="center"
                android:text="상세 정보"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView

                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src = "@drawable/home"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="주소지"
                        android:layout_marginLeft="5dp"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/place_detail_fragment_place_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="13dp"
                        android:text="주소"
                        >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/phone"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="전화번호"
                        android:layout_marginLeft="5dp"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/place_detail_fragment_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="전화번호"
                        android:layout_marginLeft="15dp"
                        >
                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/web"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="웹 사이트"
                        android:layout_marginLeft="5dp"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/place_detail_fragment_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사이트 주소"
                        android:layout_marginLeft="15dp"
                        >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/clock"
                        >
                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="영업시간"
                        android:layout_marginLeft="5dp"
                        >
                    </TextView>

                    <LinearLayout
                        android:id="@+id/place_detail_fragment_open_hour_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text = "평점"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@color/main_theme"
                >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/place_detail_fragment_evaluation_avg_score"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="3.75 점"
                        android:textSize="22dp"
                        >
                    </TextView>

                    <RatingBar
                        style = "@style/Widget.AppCompat.RatingBar.Small"
                        android:id = "@+id/place_detail_comment_item_score"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:progressTint="@color/yellow"
                        android:progressBackgroundTint="@color/gray"
                        android:secondaryProgressTint="@color/yellow"
                        >
                    </RatingBar>
                    <TextView
                        android:id="@+id/place_detail_fragment_evaluation_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:text="152명 평가"
                        >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="35dp"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="20dp"
                            android:gravity="center_vertical"
                            >
                        </TextView>
                        <SeekBar
                            android:id="@+id/place_detail_score_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:thumb="@color/white"
                            android:progressDrawable="@drawable/seekbar_bar"
                            android:max="100"
                            android:enabled="true"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="20dp"
                            android:gravity="center_vertical"
                            >
                        </TextView>
                        <SeekBar
                            android:id="@+id/place_detail_score_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:thumb="@color/white"
                            android:progressDrawable="@drawable/seekbar_bar"
                            android:max="100"
                            android:clickable="false"
                            android:enabled="false"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="20dp"
                            android:gravity="center_vertical"
                            >
                        </TextView>
                        <SeekBar
                            android:id="@+id/place_detail_score_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:thumb="@color/white"
                            android:progressDrawable="@drawable/seekbar_bar"
                            android:max="100"
                            android:enabled="false"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="20dp"
                            android:gravity="center_vertical"
                            >
                        </TextView>
                        <SeekBar
                            android:id="@+id/place_detail_score_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:thumb="@color/white"
                            android:progressDrawable="@drawable/seekbar_bar"
                            android:max="100"
                            android:enabled="false"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="20dp"
                            android:gravity="center_vertical"
                            >
                        </TextView>
                        <SeekBar
                            android:id="@+id/place_detail_score_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:thumb="@color/white"
                            android:progressDrawable="@drawable/seekbar_bar"
                            android:max="100"
                            android:enabled="false"
                            />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:id = "@+id/place_detail_fragment_comment_cnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "총 12개의 댓글"
                    android:textSize="25dp"
                    >
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    >

                    <EditText
                        android:id="@+id/place_detail_fragment_comment_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="댓글 추가..."
                        android:textColorHint="#7E7A7A"></EditText>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/place_detail_fragment_comment_send_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="6"
                        android:background="@drawable/send"
                        android:backgroundTint="@color/black" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/place_detail_fragment_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    >

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>

